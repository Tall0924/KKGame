<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/include_layout_slide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/index_item_bg"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:id="@+id/rlXinyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_icon1"
                android:layout_alignLeft="@id/iv_icon1"
                android:layout_alignRight="@id/iv_icon1"
                android:layout_alignTop="@id/iv_icon1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/color_circle_press" />

            <TextView
                android:id="@+id/tv_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon1"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/text_index_tag"
                android:textSize="@dimen/text_index" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlJingbao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_icon2"
                android:layout_alignLeft="@id/iv_icon2"
                android:layout_alignRight="@id/iv_icon2"
                android:layout_alignTop="@id/iv_icon2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/color_circle_press" />

            <TextView
                android:id="@+id/tv_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/text_index_tag"
                android:textSize="@dimen/text_index" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBibei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/iv_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_icon3"
                android:layout_alignLeft="@id/iv_icon3"
                android:layout_alignRight="@id/iv_icon3"
                android:layout_alignTop="@id/iv_icon3"
                android:layout_centerHorizontal="true"
                android:background="@drawable/color_circle_press" />

            <TextView
                android:id="@+id/tv_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/text_index_tag"
                android:textSize="@dimen/text_index" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlWangyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/iv_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_icon4"
                android:layout_alignLeft="@id/iv_icon4"
                android:layout_alignRight="@id/iv_icon4"
                android:layout_alignTop="@id/iv_icon4"
                android:layout_centerHorizontal="true"
                android:background="@drawable/color_circle_press" />

            <TextView
                android:id="@+id/tv_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/text_index_tag"
                android:textSize="@dimen/text_index" />
        </RelativeLayout>
    </LinearLayout>

    <!-- <include layout="@layout/line" /> -->


    <!-- <ImageView -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="3dp" -->
    <!-- android:background="@color/bg_space" /> -->

</LinearLayout>