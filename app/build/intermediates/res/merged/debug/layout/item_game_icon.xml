<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/game_icon_width"
        android:layout_height="@dimen/game_icon_width"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivIcon"
        android:layout_alignLeft="@id/ivIcon"
        android:layout_alignRight="@id/ivIcon"
        android:layout_alignTop="@id/ivIcon"
        android:layout_centerHorizontal="true"
        android:background="@drawable/color_conner_press" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="#666666"
        android:textSize="14sp" />

</RelativeLayout>